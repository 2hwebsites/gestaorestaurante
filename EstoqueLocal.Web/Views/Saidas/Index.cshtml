@model EstoqueLocal.Application.ViewModels.SaidaCreateViewModel
<h2>Saída / Consumo</h2>
<form asp-action="Index" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <div class="col-md-4">
        <label class="form-label">Item</label>
        <select asp-for="ItemId" class="form-select" asp-items="ViewBag.Itens"></select>
    </div>
    <div class="col-md-3">
        <label class="form-label">Quantidade</label>
        <input asp-for="Quantidade" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>
    <div class="col-md-5">
        <label class="form-label">Motivo</label>
        <input asp-for="Motivo" class="form-control" />
    </div>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Registrar</button>
    </div>
</form>
<hr />
<h4>Últimas saídas</h4>
<div class="table-wrap">
<table class="table table-app">
    <thead><tr><th>Data/Hora</th><th>Item</th><th class="text-end">Qtd</th><th>Motivo</th><th>Ações</th></tr></thead>
    <tbody>
    @foreach (var s in (IEnumerable<EstoqueLocal.Domain.Entities.SaidaConsumo>)ViewBag.Saidas)
    {
        <tr>
            <td>@s.CriadoEm.ToString("dd/MM/yyyy HH:mm")</td>
            <td>@s.Item.Nome</td>
            <td class="text-end">@s.Quantidade</td>
            <td>@s.Motivo</td>
            <td>
                <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@s.Id">Editar</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@s.Id">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }
