@model EstoqueLocal.Application.ViewModels.EntradaCreateViewModel
<h2>Entrada de Estoque</h2>
<form asp-action="Index" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <div class="col-md-4">
        <label class="form-label">Item</label>
        <select asp-for="ItemId" class="form-select" asp-items="ViewBag.Itens"></select>
    </div>
    <div class="col-md-2">
        <label class="form-label">Quantidade</label>
        <input asp-for="Quantidade" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Valor Total</label>
        <input asp-for="ValorTotal" class="form-control" type="number" step="0.01" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Fornecedor</label>
        <input asp-for="Fornecedor" class="form-control" />
    </div>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Registrar</button>
    </div>
</form>
<hr />
<h4>Últimas entradas</h4>
<div class="table-wrap">
<table class="table table-app">
    <thead><tr><th>Data/Hora</th><th>Item</th><th class="text-end">Qtd</th><th class="text-end">Valor Total</th><th>Fornecedor</th><th>Ações</th></tr></thead>
    <tbody>
    @foreach (var e in (IEnumerable<EstoqueLocal.Domain.Entities.EntradaEstoque>)ViewBag.Entradas)
    {
        <tr>
            <td>@e.CriadoEm.ToString("dd/MM/yyyy HH:mm")</td>
            <td>@e.Item.Nome</td>
            <td class="text-end">@e.Quantidade</td>
            <td class="text-end">@e.ValorTotal</td>
            <td>@e.Fornecedor</td>
            <td>
                <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@e.Id">Editar</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@e.Id">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }
