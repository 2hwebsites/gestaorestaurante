@model EstoqueLocal.Domain.Entities.EntradaEstoque
<h2>Excluir Entrada</h2>
<div class="alert alert-warning">Confirma excluir a entrada do item <strong>@Model.Item.Nome</strong>?</div>
<dl class="row">
    <dt class="col-sm-3">Quantidade</dt><dd class="col-sm-9">@Model.Quantidade</dd>
    <dt class="col-sm-3">Valor Total</dt><dd class="col-sm-9">@Model.ValorTotal</dd>
    <dt class="col-sm-3">Fornecedor</dt><dd class="col-sm-9">@Model.Fornecedor</dd>
</dl>
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <button class="btn btn-danger" type="submit">Excluir</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
