@inject IConfiguration Configuration
@{
    var appName = Configuration["Branding:AppName"] ?? "Gestão de Estoque";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@appName</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<div class="container-fluid bg-page">
    <div class="row">
        <nav class="col-12 col-md-3 col-lg-2 sidebar">
            <div class="brand">@appName</div>
            <div class="sidebar-section">Início</div>
            <a class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">Início</a>

            <div class="sidebar-section">Financeiro</div>
            <a class="sidebar-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Caixa" && ViewContext.RouteData.Values["controller"]?.ToString() == "Financeiro" ? "active" : "")" asp-controller="Financeiro" asp-action="Caixa">Caixa diário</a>
            <a class="sidebar-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ContasAPagar" && ViewContext.RouteData.Values["controller"]?.ToString() == "Financeiro" ? "active" : "")" asp-controller="Financeiro" asp-action="ContasAPagar">Contas a pagar</a>
            <a class="sidebar-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ContasAReceber" && ViewContext.RouteData.Values["controller"]?.ToString() == "Financeiro" ? "active" : "")" asp-controller="Financeiro" asp-action="ContasAReceber">Contas a receber</a>
            <a class="sidebar-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Compras" && ViewContext.RouteData.Values["controller"]?.ToString() == "Financeiro" ? "active" : "")" asp-controller="Financeiro" asp-action="Compras">Compras / Fornecedores</a>
            <a class="sidebar-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ResumoMensal" && ViewContext.RouteData.Values["controller"]?.ToString() == "Financeiro" ? "active" : "")" asp-controller="Financeiro" asp-action="ResumoMensal">Resumo mensal (DRE simples)</a>

            <div class="sidebar-section">Estoque</div>
            <a class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Estoque" ? "active" : "")" asp-controller="Estoque" asp-action="Atual">Estoque atual</a>
            <a class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Entradas" ? "active" : "")" asp-controller="Entradas" asp-action="Index">Entradas</a>
            <a class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Saidas" ? "active" : "")" asp-controller="Saidas" asp-action="Index">Saídas-Consumo</a>
            <a class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Conferencias" ? "active" : "")" asp-controller="Conferencias" asp-action="Index">Conferência</a>

            <div class="sidebar-section">Cadastros</div>
            <a class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Itens" ? "active" : "")" asp-controller="Itens" asp-action="Index">Itens</a>
            <a class="sidebar-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Financeiro" && ViewContext.RouteData.Values["action"]?.ToString() == "Categorias" ? "active" : "")" asp-controller="Financeiro" asp-action="Categorias">Categorias financeiras</a>
        </nav>
        <main class="col-12 col-md-9 col-lg-10 content-area">
            <partial name="_Notification" />
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-body">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
