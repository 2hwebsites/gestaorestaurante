@model EstoqueLocal.Application.ViewModels.ConferenciaNovaViewModel
<h2>Excluir Conferência</h2>
<div class="alert alert-warning">Confirma excluir esta conferência?</div>
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.ConferenciaId" />
    <button class="btn btn-danger" type="submit">Excluir</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
