@model EstoqueLocal.Application.ViewModels.Finance.CategoriaFinanceiraViewModel
@using EstoqueLocal.Domain.Entities.Finance
<h2>@(Model.Id == 0 ? "Nova Categoria" : "Editar Categoria")</h2>
<form asp-action="@(Model.Id == 0 ? "CriarCategoria" : "EditarCategoria")" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="col-md-6">
        <label class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label">Tipo Padr√£o</label>
        <select asp-for="TipoPadrao" class="form-select" asp-items="Html.GetEnumSelectList<TipoLancamento>()">
            <option value="">--</option>
        </select>
    </div>
    <div class="col-md-2 form-check mt-4">
        <input asp-for="Ativo" class="form-check-input" />
        <label class="form-check-label">Ativo</label>
    </div>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Salvar</button>
        <a class="btn btn-outline-secondary" asp-action="Categorias">Voltar</a>
    </div>
</form>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }
