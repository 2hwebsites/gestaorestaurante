@model EstoqueLocal.Application.ViewModels.ItemViewModel
<h2>Editar Item</h2>
<form asp-action="Edit" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="col-md-6">
        <label class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Categoria</label>
        <input asp-for="Categoria" class="form-control" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Unidade</label>
        <input asp-for="Unidade" class="form-control" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Quantidade Inicial</label>
        <input asp-for="QuantidadeInicial" class="form-control" type="number" step="0.01" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Consumo MÃ©dio</label>
        <select asp-for="ConsumoMedio" class="form-select" asp-items="Html.GetEnumSelectList<EstoqueLocal.Domain.Entities.ConsumoMedio>()"></select>
    </div>
    <div class="col-md-4 form-check mt-4">
        <input asp-for="Ativo" class="form-check-input" />
        <label class="form-check-label">Ativo</label>
    </div>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Salvar</button>
        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
    </div>
</form>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }
